{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "itemCount": {
        "type": "int",
        "defaultValue": 5
      }
    },
    "variables": {
      "copy": [
        {
          "name": "stringArray",
          "count": "[parameters('itemCount')]",
          "input": "[concat('item', copyIndex('stringArray', 1))]"
        }
      ]
    },
    "resources": [],
    "outputs": {
      "arrayResult": {
        "type": "array",
        "value": "[variables('stringArray')]"
      }
    }
  }